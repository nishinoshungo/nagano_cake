<h4 class="m-5">ジャンル一覧・追加</h4>
<div class="mt-5 mb-5">
  <%= form_with model: @genre, url: '/admin/genres', local:true do |f| %>
    <label>ジャンル名</label>
    <%= f.text_field :name, class: "mx-3" %>
    <%= f.submit "新規登録", class: "btn btn-success"%>
  <% end %>
</div>


<table class="table" style="width: 40vw">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>