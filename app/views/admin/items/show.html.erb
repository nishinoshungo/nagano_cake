<h4>商品詳細</h4>
<div class="container mt-5">
  <div class="row">
    <div class="col-4">
      <%= attachment_image_tag @item, :image, :fill, 300, 200, format: 'jpeg' %>
    </div>
    <div class="col-8">
      <table class="table">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格(税抜価格)</td>
            <td><%= @tax_include_price.floor.to_s(:delimited) %>(<%= @item.price.floor.to_s(:delimited) %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <% if @item.is_active == true %>
              <td class="active">販売中</td>
            <% else %>
              <td class="inactive">販売停止中</td>
            <% end %>
          </tr>
          <tr>
            <td></td>
            <td><%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>