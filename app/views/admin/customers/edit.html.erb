<h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>

<%= form_with model: @customer, url: "/admin/customers/#{@customer.id}", id: 'edit_customer', class: 'edit_customer', local: true do |f| %>
  <table>
    <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td><%= f.label :氏名 %></td>
        <td><%= f.text_field :last_name, autofocus: true %> <%= f.text_field :first_name, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :フリガナ %></td>
        <td><%= f.text_field :last_name_kana, autofocus: true %> <%= f.text_field :first_name_kana, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :郵便番号 %></td>
        <td><%= f.text_field :postal_code, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :住所 %></td>
        <td><%= f.text_field :address, autofocus: true, size: 40 %></td>
      </tr>
      <tr>
        <td><%= f.label :電話番号 %></td>
        <td><%= f.text_field :telephone_number, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td><%= f.radio_button :is_active, "有効" %>有効 <%= f.radio_button :is_active, "退会" %>退会</td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "変更を保存" %></td>
      </tr>
    </tbody>
  </table>
<% end %>