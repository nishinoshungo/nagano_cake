<h4 class="m-5">Sign up</h4>

<%= form_with model: @customer, url: '/customers', id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <table class="table table-borderless mx-auto" style="width: 50vw">
    <tbody>
      <tr>
        <td><%= f.label :名前 %></td>
        <td><%= f.text_field :last_name, autofocus: true, placeholder: "姓" %> <%= f.text_field :first_name, autofocus: true, placeholder: "名" %></td>
      </tr>
      <tr>
        <td><%= f.label :フリガナ %></td>
        <td><%= f.text_field :last_name_kana, autofocus: true, placeholder: "セイ" %> <%= f.text_field :first_name_kana, autofocus: true, placeholder: "メイ" %></td>
      </tr>
      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td><label>郵便番号(ハイフンなし)</label></td>
        <td><%= f.text_field :postal_code, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :"住所" %></td>
        <td><%= f.text_field :address, autofocus: true, size: 40 %></td>
      </tr>
      <tr>
        <td><%= f.label :"電話番号(ハイフンなし)" %></td>
        <td><%= f.text_field :telephone_number, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :"パスワード(6文字以上)" %></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td><%= f.label :"パスワード(確認用)" %></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>

      <tr>
        <td></td>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<p class="ml-5">既に登録済みの方</p>
<p class="ml-5"><%= link_to "こちら", "/customers/sign_in" %> からログインしてください。</p>
