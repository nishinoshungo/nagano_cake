<h4>配送先登録/一覧</h4>

<%= form_with model: @address, local:true do |f| %>
  <div class="form-field">
    <label>郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-field">
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="form-field">
    <label>宛名</label>
    <%= f.text_field :name %>
  </div>
  <div class="form-field">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id) %>
          <%= link_to "削除する", "/addresses/#{address.id}", method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>