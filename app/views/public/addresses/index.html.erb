<h4 class="m-5">配送先登録/一覧</h4>

<%= form_with model: @address, local:true do |f| %>
  <div class="row mb-3">
    <label class="col-3">郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code, class: "col-3" %>
  </div>
  <div class="row mb-3">
    <label class="col-3">住所</label>
    <%= f.text_field :address, class: "col-5" %>
  </div>
  <div class="row mb-3">
    <label class="col-3">宛名</label>
    <%= f.text_field :name, class: "col-5" %>
    <%= f.submit "新規登録", class: "btn btn-primary ml-5" %>
  </div>
<% end %>

<table class="table table-bordered mt-5" style="width: 70vw;">
  <thead class="table-secondary">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td class="d-flex justify-content-around">
          <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
          <%= link_to "削除する", "/addresses/#{address.id}", method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>