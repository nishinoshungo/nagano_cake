<h4 class="m-5">配送先編集</h4>

<%= form_with model: @address, url: "/addresses/#{@address.id}", method: :patch, local:true do |f| %>
  <div class="row mb-3">
    <label class="col-3">郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code, class: "col-3" %>
  </div>
  <div class="row mb-3">
    <label class="col-3">住所</label>
    <%= f.text_field :address, class: "col-5" %>
  </div>
  <div class="row mb-3">
    <label class="col-3">宛名</label>
    <%= f.text_field :name, class: "col-5" %>
    <%= f.submit "変更内容を保存", class: "btn btn-primary ml-5" %>
  </div>
<% end %>