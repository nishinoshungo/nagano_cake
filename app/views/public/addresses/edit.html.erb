<%= form_with model: @address, url: "/addresses/#{@address.id}", method: :patch, local:true do |f| %>
  <div class="form-field">
    <label>郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-field">
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="form-field">
    <label>宛名</label>
    <%= f.text_field :name %>
  </div>
  <div class="form-field">
    <%= f.submit "変更内容を保存" %>
  </div>
<% end %>