<h4>注文情報入力</h4>

<%= form_with model: @order, url: "/orders/confirm", method: :post, local:true do |f| %>
  <div class="form-group">
    <label>支払い方法</label><br>
    <%= f.radio_button :payment, 0, checked: "checked" %>クレジットカード<br>
    <%= f.radio_button :payment, 1 %>銀行振込
  </div>
  <div class="form-group">
    <label>お届け先</label><br>
    <%= f.radio_button :address_option, 0, checked: "checked" %>ご自身の住所<br>
    〒<%= current_customer.postal_code %> <%= current_customer.address %><br>
    <%= current_customer.last_name %><%= current_customer.first_name %><br>
    <%= f.radio_button :address_option, 1 %>登録済み住所から選択<br>
    <%= f.collection_select(:selected_address, current_customer.addresses, :id, :postal_code_address_name) %><br>
    <%= f.radio_button :address_option, 2 %>新しいお届け先
    <div class="form-group">
      <label>郵便番号(ハイフンなし)</label>
      <%= f.text_field :postal_code %>
    </div>
    <div class="form-group">
      <label>住所</label>
      <%= f.text_field :address %>
    </div>
    <div class="form-group">
      <label>宛名</label>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "確認画面へ進む" %>
  </div>
<% end %>