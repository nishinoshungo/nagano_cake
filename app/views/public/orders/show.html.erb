<h4>注文履歴詳細</h4>
<h5>注文情報</h5>
<table>
  <tbody>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>
        〒<%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
      </td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment %></td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td><%= @order.order_status %></td>
    </tr>
  </tbody>
</table>

<h5>請求情報</h5>
<table>
  <tbody>
    <tr>
      <td>商品合計</td>
      <td><%= (@order.price- @order.shipping).to_s(:delimited) %></td>
    </tr>
    <tr>
      <td>配送料</td>
      <td><%= @order.shipping %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= @order.price.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>

<h5>注文内容</h5>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込み)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |order_item| %>
      <% tax_include_price = (order_item.price * 1.1).floor %>
      <% subtotal = tax_include_price * order_item.amount %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= tax_include_price.to_s(:delimited) %></td>
        <td><%= order_item.amount %></td>
        <td><%= subtotal.to_s(:delimited) %></td>
      </tr>
    <% end %>
  </tbody>
</table>