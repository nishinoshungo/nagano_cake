<div>
  <h5>ジャンル検索</h5>
  <ul>
    <% @genres.each do |genre| %>
      <%= genre.name %>
    <% end %>
  </ul>
</div>


<div>
  <h4>商品一覧(全<%= @items.count %>件)</h4>
  <% @items.each do |item| %>
    <%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %>
    <% end %>
    <%= item.name %>
    ¥<%= item.price.to_s(:delimited) %>
  <% end %>
</div>