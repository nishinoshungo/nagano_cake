<div class="row">
  <div class="col-3">
    <%= render 'public/items/genre_list', genres: @genres %>
  </div>
  <div class="col-9">
    <div class="container">
      <h4 class="mb-5"><%= @genre_name %>一覧(全<%= @items.count %>件)</h4>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3">
            <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :image, :fill, 180, 140, format: 'jpeg' %>
            <% end %>
            <p class="mt-3"><%= item.name %></p>
            <p>¥<%= item.price.to_s(:delimited) %></p>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
