<%= render 'public/items/genre_list', genres: @genres %>


<div>
  <h4><%= @genre_name %>一覧(全<%= @items.count %>件)</h4>
  <% @items.each do |item| %>
    <%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %>
    <% end %>
    <%= item.name %>
    ¥<%= item.price.to_s(:delimited) %>
  <% end %>
</div>