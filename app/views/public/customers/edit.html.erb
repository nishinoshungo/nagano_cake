<h4>会員情報編集</h4>

<%= form_with model: @customer, url: '/customers', local:true do |f| %>
  <table class="table table-borderless mx-auto" style="width: 70vw">
    <tbody>
      <tr>
        <td><%= f.label :名前 %></td>
        <td><%= f.text_field :last_name, autofocus: true, placeholder: "姓" %> <%= f.text_field :first_name, autofocus: true, placeholder: "名" %></td>
      </tr>
      <tr>
        <td><%= f.label :フリガナ %></td>
        <td><%= f.text_field :last_name_kana, autofocus: true, placeholder: "セイ" %> <%= f.text_field :first_name_kana, autofocus: true, placeholder: "メイ" %></td>
      </tr>
      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td><label>郵便番号(ハイフンなし)</label></td>
        <td><%= f.text_field :postal_code, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :"住所" %></td>
        <td><%= f.text_field :address, autofocus: true, size: 40 %></td>
      </tr>
      <tr>
        <td><%= f.label :"電話番号(ハイフンなし)" %></td>
        <td><%= f.text_field :telephone_number, autofocus: true %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "編集内容を保存", class: "btn btn-success" %> <%= link_to "退会する", customers_unsubscribe_path, class: "ml-3 btn btn-danger" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

