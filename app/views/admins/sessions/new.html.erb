<h4 class="m-5">管理者ログイン</h4>

<div class="mx-auto" style="width: 70%;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <%= f.label :メールアドレス, class: "col-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-6" %>
    </div>
    <div class="row mt-3">
      <%= f.label :パスワード, class: "col-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-6" %>
    </div>
    <div class="d-flex justify-content-center mt-5">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
